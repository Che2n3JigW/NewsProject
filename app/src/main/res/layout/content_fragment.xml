<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.cjw.newsproject.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.example.cjw.newsproject.view.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_news_drawable_selector"
            android:text="新闻" />

        <RadioButton
            android:id="@+id/rb_wisdom"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_wisdom_drawable_selector"
            android:text="智慧" />

        <RadioButton
            android:id="@+id/rb_politicians"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_politicians_drawable_selector"
            android:text="政要" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_setting_drawable_selector"
            android:text="设置" />


    </RadioGroup>
</LinearLayout>